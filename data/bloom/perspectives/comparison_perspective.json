  "searchPhrases": [
    {
      "phrase": "NGSS 3 dimensions",
      "cypher": "MATCH (f:Framework {framework_id: 'ngss-science-2013'})-[:HAS_DIMENSION]->(d:Dimension) MATCH (d)-[]->(child) RETURN d, child LIMIT 100"
    },
    {
      "phrase": "Show NGSS practices aligned to UK",
      "cypher": "MATCH (p:Practice)-[:ALIGNS_TO]->(c:Concept)<-[:HAS_CONCEPT]-(dom:Domain) WHERE dom.subject_name = 'Science' RETURN p, c, dom"
    },
    {
      "phrase": "Performance Expectations using {practice}",
      "cypher": "MATCH (p:Practice)-[:HAS_PE]-(pe:PerformanceExpectation) WHERE p.practice_name CONTAINS $practice RETURN p, pe LIMIT 50"
    }
  ],

  "rules": [
    {
      "name": "Highlight aligned nodes",
      "condition": "node.aligned = true OR (node)-[:ALIGNS_TO]-()",
      "action": "addBadge",
      "value": "âŸ·"
    }
  ]
