  "searchPhrases": [
    {
      "phrase": "Show me {subject} for {key_stage}",
      "cypher": "MATCH (s:Subject {name: $subject})-[:HAS_PROGRAMME]->(p:Programme) WHERE p.key_stage = $key_stage MATCH path = (p)-[*1..3]->() RETURN path LIMIT 100"
    },
    {
      "phrase": "Prerequisites for {concept}",
      "cypher": "MATCH path = (prereq:Concept)-[:PREREQUISITE_OF*]->(target:Concept) WHERE target.name CONTAINS $concept RETURN path"
    },
    {
      "phrase": "Compare NGSS to UK science",
      "cypher": "MATCH (p:Practice) OPTIONAL MATCH (p)-[:ALIGNS_TO]->(c:Concept) RETURN p, c LIMIT 50"
    },
    {
      "phrase": "Show {category} layer",
      "cypher": "MATCH (n) WHERE n.display_category = $category RETURN n LIMIT 200"
    }
  ],

  "rules": [
    {
      "name": "Highlight cross-cutting concepts",
      "condition": "node.is_cross_cutting = true",
      "action": "addBadge",
      "value": "â˜…"
    },
    {
      "name": "Size by connectivity",
      "condition": "degree > 10",
      "action": "setSize",
      "value": "50"
    }
  ]
